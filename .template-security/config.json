{
  "failOnSeverity": "LOW",
  "scan": {
    "enabled": true,
    "outputFormat": "json"
  },
  "report": {
    "includePassedChecks": true,
    "includeSeveritySummary": true
  },
  "frameworks": {
    "terraform": { "templateFilesPattern": "**/*(*.tf|*.tfvars)" },
    "cloudformation": { "templateFilesPattern": "**/*(*.yml|*.yaml|*.json)" }
  }
}
